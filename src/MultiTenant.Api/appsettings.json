{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Dev\\MultiTenant\\Logs\\log_.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "TenantSettings": {
    "Defaults": {
      "DBProvider": "mssql",
      "ConnectionString": "Server=localhost\\SQLEXPRESS;Database=SharedTenantDb;Trusted_Connection=True;MultipleActiveResultSets=True"
    },
    "Tenants": [
      {
        "Name": "Company1",
        "Id": "Company1",
        "ConnectionString": "Server=localhost\\SQLEXPRESS;Database=Company1TenantDb;Trusted_Connection=True;MultipleActiveResultSets=True"
      },
      {
        "Name": "Company2",
        "Id": "Company2",
        "ConnectionString": "Server=localhost\\SQLEXPRESS;Database=Company2TenantDb;Trusted_Connection=True;MultipleActiveResultSets=True"
      },
      {
        "Name": "Company3",
        "Id": "Company3"
      },
      {
        "Name": "Company4",
        "Id": "Company4"
      },
      {
        "Name": "TestTenant",
        "Id": "TestTenant",
        "DBProvider": "InMemory"
      }
    ]
  }
}